<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andyr.fieldassistant">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fa_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fa_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Report1Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Report2Activity"
            android:windowSoftInputMode="stateVisible" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.andyr.fieldassistant"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/files" />
        </provider>

        <activity
            android:name=".GroupActivity"
            android:label="@string/title_activity_group"
            android:parentActivityName=".Report1Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.andyr.fieldassistant.Report1Activity" />
        </activity>
    </application>

</manifest>